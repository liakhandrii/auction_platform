<!DOCTYPE html>
<html>
<head>
  <title>AuctionPlatform</title>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'carousel' => true %>
  <%= csrf_meta_tags %>
  <% stylesheet_link_tag 'bootstrap-social', media: 'all' %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-alpha/js/bootstrap.min.js"></script>

  <style type="text/css">
    body {
      background-color: #dddddd;
    }

    #upload {
      background-color: #f5a623;
      color: white;
      border: none;
      line-height: 10px;
      font-size: 11px;
    }

    #upload:hover {
      background-color: #ff8a00;
    }

    .badge {
      background-color: #ed1c24;
    }

    #teashers:hover, #students:hover, #logout:hover {
      background-color: #dddddd;
    }

    .dropdown-menu {
      border-top: none;
      border-radius: 0;
      background-color: #f8f8f8;
    }

    #blackout {
      width: 100%;
      height: 100%;
      position: fixed;
      top: 0;
      left: 0;
    }

    #overlay {
      width: 100%;
      height: 100%;
      position: absolute;
      background: rgba(0, 0, 0, 0.6);
      z-index: 10;
    }

    #upload-popup {
      width: 600px;
      height: 330px;
      background-color: #fff;
      top: 120px;
      z-index: 20;
      display: block;
      position: relative;
      border-radius: 5px;
    }

    .addPhotoAlert {
      display: none;
      width: 70%;
      position: absolute;
      top: 247px;
      left: 157px;
    }

    .modal-dialog {

    }

    .thumbnail {
      margin-bottom: 6px;
    }

    .carousel-control.left, .carousel-control.right {
      background-image: none;
    }

    .photos {
      margin-top: 100px;
    }

    @media (min-width: 768px) {
      #searchBox {
        width: 120px;
      }

      #students:hover #drStudents {
        display: block;
      }

      #teashers:hover #drTeachers {
        display: block;
      }

      #mobileT {
        display: none;
      }

      #mobileS {
        display: none;
      }
    }

    @media (max-width: 768px) {
      #teashers:hover, #students:hover {
        background-color: #eeeeee;
      }

      #mobileT, #mobileS {
        display: block;
        margin-left: 30px;
        margin-right: 30px;
        border-bottom: none;
        padding-bottom: 1px;
      }

      .drliM a {
        color: #898989;
      }

      #jj:hover {
        background-color: #dddddd;
      }

      #linkAdd {
        width: 30%;
      }

      #upload-popup {
        height: 410px;
      }

      .addPhotoAlert {
        top: 332px;
      }
    }

    .clickable {
      outline: none;
    }

  </style>
</head>
<body>
<div class="container-fluid">
  <div class="row" style="z-index: 5;">
    <div class="col-md-12">
      <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#"><%= t('auction') %>'16</a>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1" style="max-height: 540px;">
          <ul class="nav navbar-nav">
            <li id="teashers">
              <a href="#"><%= t('prof') %>  <span class="badge">67</span></a>
              <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu" id="drTeachers">
                <li class="drli" id="jj"><a tabindex="-1" href="#"><%= t('men') %></a></li>
                <li class="drli"><a tabindex="-1" href="#"><%= t('women') %></a></li>
              </ul>
              <ul class="nav nav-tabs nav-stacked" id="mobileT">
                <li class="drliM"><a tabindex="-1" href="#"><%= t('men') %></a></li>
                <li class="drliM"><a tabindex="-1" href="#"><%= t('women') %></a></li>
              </ul>
            </li>
            <li id="students">
              <a href="#"><%= t('students') %>  <span class="badge">78</span></a>
              <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu" id="drStudents">
                <li class="drli"><a tabindex="-1" href="#"><%= t('boys') %></a></li>
                <li class="drli"><a tabindex="-1" href="#"><%= t('girls') %></a></li>
              </ul>
              <ul class="nav nav-tabs nav-stacked" id="mobileS">
                <li class="drliM"><a tabindex="-1" href="#"><%= t('boys') %></a></li>
                <li class="drliM"><a tabindex="-1" href="#"><%= t('girls') %></a></li>
              </ul>
            </li>
          </ul>

          <ul class="nav navbar-nav navbar-right">
            <li>
              <a href="#" data-toggle="modal" data-target="#uploadLot">
                <span class="glyphicon glyphicon-cloud-upload" style="margin-left: 10px; margin-top: -10px;"></span>
                <%= t('upload') %>
              </a>
            </li>
            <li><%= link_to t('log_out'), sign_out_url, method: :delete %></li>
            <li>
            <li>
              <form class="navbar-form navbar-right" role="search" style="margin-left: 10px; margin-right: 25px;">
                <div class="form-group">
                  <input type="text" class="form-control" placeholder="<%= t('search') %>" id="searchBox">
                </div>
                <button type="submit" class="btn btn-default">
                  <%= t('go') %>
                </button>
              </form>
            </li>
          </ul>
        </div>
      </nav>
    </div>
  </div>
</div>

<!-- Modal -->
<div id="uploadLot" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-body">
        <form method="post" action="/upload" enctype="multipart/form-data" role="form">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <div class="form-group col-lg-3" style="padding-left: 0px;">
            <div class="input-group">
              <span class="input-group-addon glyphicon glyphicon-cloud-upload" id="basic-addon1" style="top: 0px;"></span>
              <a class='btn btn-default' href='javascript:;' style="border-radius: 0 2px 2px 0;">
                <strong><%= t('chooseFile') %></strong>
                <input type="file" style='position:absolute;z-index:2;top:0;left:0;filter: alpha(opacity=0);-ms-filter:"progid:DXImageTransform.Microsoft.Alpha(Opacity=0)";opacity:0;background-color:transparent;color:transparent;' name="file_source" size="40" onchange='$("#upload-file-info").html($(this).val());'>
              </a>
            </div>
          </div>
          <div class="col-lg-2">
            <p class="hidden-xs glyphicon glyphicon-resize-horizontal" style="margin: 6px 51px 29px;"></p></div>
          <div class="form-group col-lg-7">
            <div class="input-group hidden-xs ">
              <span class="input-group-addon glyphicon glyphicon-link" id="basic-addon1" style="top: 0px;"></span>
              <input type="text" class="form-control" placeholder="<%= t('link') %>" aria-describedby="basic-addon1" id="linkAdd" name="link">
            </div>
          </div>
          <div clas="form-group">
            <p id="helpBlock"><b><%= t('about') %></b></p>
          </div>
          <div class="form-group">
            <input type="text" class="form-control" name="faculty" placeholder="Faculty">
          </div>
          <div class="form-group">
            <textarea name="description" class="form-control" id="inputHelpBlock" rows="5"></textarea>
          </div>
          <div class="form-group">
            <input type="submit" class="btn btn-success" value="<%= t('save') %>">
          </div>
          <!--<button type="submit" class="btn btn-success" id="addPhoto"><%= t('save') %></button>-->
        </form>
      </div>
      <div class="modal-footer">
        <div class="alert alert-success addPhotoAlert" id="successText">
          <strong><%= t('success') %></strong><%= t('successText') %>
        </div>
        <div class="alert alert-danger addPhotoAlert" id="dangerText" style="width: 50%;">
          <strong><%= t('danger') %></strong><%= t('dangerText') %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row photos">
    <% @lots.each do |lot_photo| %>
        <div class="col-lg-3 col-sm-4 col-xs-6">
          <a title="Image 1" data-toggle="modal" data-target="#carouselModal">
            <img class="thumbnail img-responsive" onclick="makeSlideActive(<%= lot_photo.id %>)" src="http://localhost:3000/<%= lot_photo.attachment %>">
          </a>
        </div>
    <% end %>
  </div>
  <div id="carouselModal" class="modal fade">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-body">
          <div id="carousel-example-generic" class="carousel slide" data-ride="carousel" data-interval="false">
            <!-- Indicators -->
            <ol class="carousel-indicators">
              <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
              <li data-target="#carousel-example-generic" data-slide-to="1"></li>
              <li data-target="#carousel-example-generic" data-slide-to="2"></li>
            </ol>
            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
              <% @lots.each do |lot_photo| %>
                  <div class="item" id="item_<%= lot_photo.id %>">
                    <img src="http://localhost:3000/<%= lot_photo.attachment %>" alt="<%= lot_photo.description %>">
                    <div class="container">
                      <div class="col-md-1">
                        <div class="text-left">
                          <span class="glyphicon glyphicon-heart-empty" style="font-size:3.5em; color: #e8e8e8;"></span>
                        </div>
                      </div>
                      <div class="col-md-4">
                        <table>
                          <tr>
                            <td colspan="4">
                              <span class="glyphicon glyphicon-minus-sign" style="font-size:3.5em; color: #EA4335"></span>
                            </td>
                            <td>
                              <input type="text" class="form-control"
                                     style="display: block; width: 87px; background-color:#d4d4d4; color: #FFF;"
                                     id="confirmed_bet_<%= lot_photo.id %>"
                                     value="<%= @bet = @bets.find_by(lot_id: lot_photo.id) 
                                     if @bet != nil then
                                      @bet.confirmed_bet
                                    end %>" disabled>
                            </td>
                            <td colspan="4">
                              <a href="#" class="clickable">
                              <span class="glyphicon glyphicon-plus-sign"
                                    style="font-size:3.5em;color: #34A853"
                                    onclick="raiseBet(<%= lot_photo.id%>)">
                              </span>
                              </a>
                            </td>
                          </tr>
                        </table>
                      </div>
                      <div class="col-md-6">
                        <div class="alert alert-success">
                        <%= @bet = @bets.find_by(lot_id: lot_photo.id) %>
                          <% if @bet != nil && @bet.user_id %>
                              <%= @users.find(@bets.find_by(lot_id: lot_photo.id).user_id).name %>
                          <% else %>
                              No bets
                          <% end %>
                        </div>
                        <button class="btn btn-primary btn-lg" id="betConfirmBtn" onclick="getBet(<%=lot_photo.id%>)">
                          Confirm bet
                        </button>
                      </div>
                    </div>
                  </div>
              <% end %>
            </div>

            <!-- Controls -->
            <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
              <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
              <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



<%= flash[:notice] %>

<script type="text/javascript">
  $(document).ready(function () {
    var success = true;
    $('#addPhoto').click(function () {
      if (success) {
        $('#successText').css("display", "block");
      }
      else {
        $('#dangerText').css("display", "block");
      }
    });


    /* activate the carousel */
    $('#carouselModal').carousel({interval: false});
  });

  function getBet(lot_id) {
    var data = {
      'user_id': <%= current_user.id %>,
      'lot_id': lot_id,
      'confirmed_bet': document.getElementById('confirmed_bet_'+lot_id).value
    };
    $.getJSON('/set-bet',
        data,
        function (data) {

        });
  }

  function makeSlideActive(id) {
    <% @lots.each do |lot_photo| %>
    $('#item_' +<%= lot_photo.id %>).removeClass('active');
    <% end %>
    $('#item_' + id).addClass('active');
  }

  function raiseBet(id) {
    document.getElementById('confirmed_bet_' + id).value = (parseInt(document.getElementById('confirmed_bet_' + id).value) + 10);
  }
</script>
</body>
</html>