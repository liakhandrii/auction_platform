								<ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu" id="drStudents">
									<li class="drli"><a tabindex="-1" href="#"><%= t('boys')%></a></li>
									<li class="drli"><a tabindex="-1" href="#"><%= t('girls')%></a></li>
								</ul>
								<ul class="nav nav-tabs nav-stacked" id="mobileS">
									<li class="drliM"><a tabindex="-1" href="#"><%= t('boys')%></a></li>
									<li class="drliM"><a tabindex="-1" href="#"><%= t('girls')%></a></li>
								</ul>
							</li>
						</ul>

						<ul class="nav navbar-nav navbar-right">
							<li><a href="#" id="upload"><span class="glyphicon glyphicon-cloud-upload" style="margin-left: 10px; margin-top: -10px;"></span></br><%= t('upload')%></a></li>
							<li><a href="#" id="logout"><%= t('log_out')%></a></li>
							<li>
								<li>
									<form class="navbar-form navbar-right" role="search" style="margin-left: 10px; margin-right: 25px;">
										<div class="form-group">
											<input type="text" class="form-control" placeholder="<%= t('search')%>" id="searchBox">
										</div> 
										<button type="submit" class="btn btn-default">
											<%= t('go')%>
										</button>
									</form>
								</li>
							</ul>

						</div>

					</nav>
				</div>
			</div>
			
		</div>
		
		<div class="container-fluid center-block" style="width: 70%">
			<div class="row photos">
				<div class="col-md-4">
					<img alt="image" src="http://lorempixel.com/500/500/" class="img-thumbnail center-block" width="250px" height="250px" />
