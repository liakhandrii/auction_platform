		<div id="photo-blackout">
			<div id="overlay"></div>
			<div class="center-block" id="photo-popup">
				<a href="#" class="close" id="close-popup-photo" title="close" style="position: relative; left: -5px;">×</a>
				<img src="http://lorempixel.com/500/500/" class="big-photo">
				<div class="row photo-footer">
					<div class="col-md-1"><img src="https://cdn4.iconfinder.com/data/icons/ionicons/512/icon-ios7-heart-outline-128.png" style="width: 300%; height: auto; cursor: pointer; margin-top: 3px;"></div>
				</div>
			</div>
		</div>
		<script type="text/javascript">
			$( document ).ready(function() {
    			$('#upload').click(function(){
    				$('#blackout').css("display", "block");
    			});
    			var success = true;
    			$('#addPhoto').click(function(){
    				if(success){
    					$('#successText').css("display", "block");
    				}
    				else{
    					$('#dangerText').css("display", "block");
    				}
    			});
    			$('#close-popup-upload').click(function(){
    				$('#blackout').css("display", "none");
    				$('.addPhotoAlert').css("display", "none");
    			});

    			$('#close-popup-photo').click(function(){
    				$('#photo-blackout').css("display", "none");
    			});

			});
		</script>
	</body>
	</html>